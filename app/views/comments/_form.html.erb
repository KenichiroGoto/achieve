<%= form_for([blog, comment], remote: true) do |f| %>
  <% if comment.errors.any? %>
    <div id="error_explanation">
      <h2><%= comment.errors.count %>件のエラーがあります。</h2>

      <ul>
        <% comment.error.full_message.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.hidden_field :blog_id %>
  <div class="field">
    <%= f.text_field :content, placeholder: "コメント内容", class: "form-control" %>
  </div>
  </br>
  <div class="actions">
    <%= f.submit "コメントする"%>
  </div>
<% end %>
