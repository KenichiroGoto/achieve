<div class="container">
  <div class="row">
    <div class="wrapper col-md-6 col-md-offset-3 col-sm-10">
      <p><%= notice %></p>

      <h1>ブログ一覧</h1>

        <%= link_to "ブログを作成する", new_blog_path, class: 'btn btn-default' %>

        <% @blogs.each do |blog| %>
          <div class = "blogs_box">
              <div class = "user_info" >
                <div class = "index_profile_image">
                  <%= profile_img(blog.user) %>
                </div>
                <p><%= blog.user.name %>が投稿しました。</p>
                <p>投稿日時：<%= blog.updated_at %></p>
              </div>
              <div class = "blogs_content" >
                <%= link_to blog_path(blog) do %>
                <h4><strong><%= blog.title %></strong></h4>
                <% end %>
                <p><%= blog.content %></p>
              </div>
            <% if current_user.id == blog.user_id %>
            <%= link_to "編集", edit_blog_path(blog.id), class: 'btn btn-default btn-sm btn-success' %>
            <%= link_to "削除", blog_path(blog.id), data: { confirm: '本当に削除していいですか？' }, method: :delete, class: 'btn btn-default btn-sm btn btn-danger' %>
            <% end %>
          </div>
        <% end %>

    </div>
  </div>
</div>

